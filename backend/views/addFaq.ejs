<link rel="stylesheet" href="/notInjectedStyles/general.css">
<div class="container" style="margin-top: 20px">
    <form method="POST" action="/addFaq">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Category</span>
            </div>
            <select name="category" class="custom-select" id="inputGroupSelect01">
                <% categories.forEach(category => { %>
                    <option value="<%= category %>"><%= category %></option>
                <% }) %>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Question</span>
            </div>
            <input required name="question" type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Answer</span>
            </div>
            <textarea required name="answer" class="form-control" aria-label="With textarea"></textarea>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
</div>
<link rel="stylesheet" href="/notInjectedStyles/general.css">
<div class="container" style="margin-top: 20px">
    <form method="POST" action="/editInfo">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Category</span>
            </div>
            <select name="category" class="custom-select" id="inputGroupSelect01">
                <% categories.forEach(category => { %>
                    <% if(category == info.category) { %> 
                        <option selected value="<%= category %>"><%= category %></option>
                    <% } else { %>
                         <option value="<%= category %>"><%= category %></option>
                    <% } %>
                <% }) %>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Title</span>
            </div>
            <input value="<%= info.title %>" required name="title" type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Content</span>
            </div>
            <textarea required name="content" class="form-control" aria-label="With textarea"><%= info.content %> </textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Url</span>
            </div>
            <input value="<%= info.url%>" required name="url" type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Type</span>
            </div>
            <select name="type" class="custom-select" id="inputGroupSelect01">
                <% let types = ['text', 'list', 'map'] %>
                <% types.forEach(type => { %>
                    <% if(type == info.type) { %> 
                        <option selected value="<%= type %>"><%= type %></option>
                    <% } else { %>
                         <option value="<%= type %>"><%= type %></option>
                    <% } %>
                <% }) %>
            </select>
        </div>

        <input class="btn btn-primary btn-lg" type="submit" value="Submit">
    </form>
</div>
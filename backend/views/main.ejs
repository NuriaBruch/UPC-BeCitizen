    <div class="container" style="margin-top: 10px; width: 50%">
        <h4>Top 6 most reported FAQS</h4>
        <canvas id="myChart" width="400" height="400" style="margin-bottom: 40px"></canvas>
        <script>
        var ctx = document.getElementById("myChart").getContext('2d');
        var faqs =  <%- faqsWithReports %>;
        console.log(faqs.map(f => f.reports));
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: faqs.map(f => f.question),
                datasets: [{
                    label: 'number of reports',
                    data: faqs.map(f => f.reports),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
        </script>


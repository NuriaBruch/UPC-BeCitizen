        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image"
        android:src="@drawable/userprofile1"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp" />

</LinearLayout>
